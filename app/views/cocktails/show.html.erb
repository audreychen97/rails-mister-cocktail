<h1><%= @cocktail.name %></h1>

<h3>
  Ingredients:
  <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %>
        <%= link_to dose_path(dose, cocktail: Cocktail.find(params[:id])), method: :delete do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
      <% end %>
  </ul>
</h3>


<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
<%= link_to "Back to All Cocktails", cocktails_path, class: "btn btn-primary"%>
